# -i: prompt before overwriting
# -p: preserve attributes
# -L: follow all symbolic links when -R option is specified
# -R: copy recursively
alias cp="cp -ipLR"

# -v: number the directories in the stack when printing
alias dirs="dirs -v"

# -i: print full time-date stamps in ISO8601 ‘yyyy-mm-dd hh:mm’ format
alias hisi="history -i"

# -1: force output to be one entry per line
# -a: include dotfiles
# -l: list files in the long format
# -h: show file size in human-readable format when -l option is specified
alias ls1="ls -1"
alias la="ls -a"
alias la1="ls -a1"
alias ll="ls -lh"
alias lla="ls -lah"

# -p: create intermediate directories as required
alias mkdir="mkdir -p"

# -i: prompt before overwriting
alias mv="mv -i"

